<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_height"
    android:layout_gravity="center"
    android:layout_marginBottom="@dimen/default_margins"
    android:layout_marginLeft="@dimen/default_margins"
    android:layout_marginRight="@dimen/default_margins"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/player_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_image_height"
            android:scaleType="fitXY"
            tools:src="@drawable/kobe" />

        <TextView
            android:id="@+id/player_data"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_title_height"
            android:layout_below="@+id/player_image"
            android:layout_marginLeft="@dimen/default_margins"
            android:layout_marginRight="@dimen/default_margins"
            android:layout_marginTop="@dimen/default_margins"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="?attr/colorPrimary"
            android:textSize="20dp"
            tools:text="Item description" />

        <Button
            android:id="@+id/button_see_stats"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/player_data"
            android:text="See full stats"
            android:textColor="@color/dark_grey" />

    </RelativeLayout>
</android.support.v7.widget.CardView>